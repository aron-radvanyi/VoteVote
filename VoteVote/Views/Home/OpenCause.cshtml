
@{
    ViewBag.Title = "OpenCause";
}
<head>
    <style>
        
        #openCauseFluid {
            background-color: #15202b;
            min-height: 1500px;
        }
        #h1OpenCause {
            color: whitesmoke;
            margin-top: 20px;
