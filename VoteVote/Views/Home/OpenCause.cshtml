        #cardImageOpenCauses {
            background-color: #bfded9;
            max-width: 600px;
            margin-left: 20px;
        }
        #imgopenCause {
            max-width: 600px;
            max-height: 350px;
            padding: 30px;
        }
        
        #cardSignedPeople {
            background-color: #bfded9;
            color: #15202b;
            font-weight: bold;
            position: absolute;
